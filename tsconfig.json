{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types"
    ],
    "noUnusedLocals": true,
    "types": ["node", "jest"],
    "lib": ["es2017", "dom"]
  },
  "exclude": ["node_modules"]
}
